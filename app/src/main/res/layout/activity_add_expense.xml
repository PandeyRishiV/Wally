<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".mybud.add_expense">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="65dp"
        android:text="Date : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dateview"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/amount"
        android:gravity="bottom|right"
        android:text="dd/MM/yyyy"
        android:textColor="@color/navyblue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="120dp"
        android:text="Type  : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/desc"
        android:layout_alignParentTop="true"
        android:layout_marginTop="167dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_marginTop="247dp"
        android:text="Description : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent" />

    <Switch
        android:id="@+id/deduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/amount"
        android:layout_marginBottom="151dp"
        android:text="Deduct From Income   :    "
        android:textColor="@color/add_background"
        android:visibility="invisible" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/navyblue"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="215dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/amount"
        android:popupBackground="@color/colorPrimary"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/amount"
        android:layout_alignStart="@+id/textView7"
        android:text="Amount : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="38dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/dateview"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/save"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:text="Update"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/amounttxt"
        android:layout_width="192dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/amount"
        android:layout_alignStart="@+id/dateview"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/desctxt"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/desc"
        android:layout_alignStart="@+id/dateview"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="invisible" />

</RelativeLayout>