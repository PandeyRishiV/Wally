<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addinc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_border"
    tools:context=".add_income">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:text="Income Source  : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="228dp"
        android:text="Amount  :"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="301dp"
        android:text="Description : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/navyblue"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/source"
        android:layout_width="172dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/amount"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="-13dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="88dp"
        android:text="Date : "
        android:textColor="@color/add_background"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/datev"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/source"
        android:gravity="bottom|right"
        android:text="dd/MM/yyyy"
        android:textColor="@color/navyblue"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="21dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/save"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Update"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/amountxt"
        android:layout_width="165dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/amount"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/destxt"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/amount"
        android:layout_alignTop="@+id/desc"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="invisible" />


</RelativeLayout>